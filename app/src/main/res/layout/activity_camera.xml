<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CameraActivity">

    <edu.stanford.riedel_kruse.bioticgames.CameraView
        android:id="@+id/camera_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        opencv:show_fps="true"
        opencv:camera_id="any"
        android:layout_weight="1"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue Player: \n 0"
            android:id="@+id/bPoints"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Player: \n 0"
            android:id="@+id/rPoints"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:id="@+id/newGame"
            android:clickable="true"
            android:onClick="resetScore"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/bPoints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Countdown: 0"
            android:id="@+id/countDown"
            android:layout_below="@+id/newGame"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Turn: Blue"
            android:id="@+id/playerTurn"
            android:layout_below="@+id/newGame"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/countDown" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pass!"
            android:id="@+id/passButton"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/rPoints"
            android:onClick="passButtonPressed" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/debug_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>
