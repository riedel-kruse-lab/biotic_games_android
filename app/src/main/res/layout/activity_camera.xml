<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CameraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/menuLayout">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rules"
                android:typeface="monospace"
                android:id="@+id/instructButton"
                android:clickable="true"
                android:onClick="onInstructionsPressed"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biotics"
                android:typeface="monospace"
                android:id="@+id/infoButton"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/instructButton"
                android:clickable="true"
                android:onClick="infoButtonPressed" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Problems?"
                android:id="@+id/troubleShootButton"
                android:layout_alignParentTop="true"
                android:clickable="true"
                android:onClick="troubleShootButtonPressed" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Credits"
                android:typeface="monospace"
                android:id="@+id/creditButton"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/button"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="creditsButtonPressed" />

            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/menuLayout">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Start!"
                android:textStyle="bold"
                android:typeface="monospace"
                android:id="@+id/newGame"
                android:clickable="true"
                android:onClick="onNewGamePressed"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Countdown: 0"
            android:textSize="20dp"
            android:typeface="monospace"
            android:id="@+id/countDown"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0  "
            android:typeface="monospace"
            android:textColor="#ff0000"
            android:textSize="40dp"
            android:id="@+id/rPoints"
            android:layout_alignBottom="@+id/countDown"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn: Blue"
            android:textSize="20dp"
            android:typeface="monospace"
            android:id="@+id/playerTurn"
            android:layout_above="@+id/countDown"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  0"
            android:textSize="40dp"
            android:textColor="#0000ff"
            android:typeface="monospace"
            android:id="@+id/bPoints"
            android:editable="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <edu.stanford.riedel_kruse.bioticgames.CameraView
        android:id="@+id/camera_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        opencv:show_fps="true"
        opencv:camera_id="any"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Throw Ball"
            android:textSize="25dp"
            android:typeface="monospace"
            android:id="@+id/passButton"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="passButtonPressed" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="Pickup Ball\n(-1 point)"
            android:textSize="25dp"
            android:typeface="monospace"
            android:id="@+id/pickupButton"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:onClick="pickupButtonPressed" />

    </LinearLayout>

    <ImageView
        android:id="@+id/debug_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>
