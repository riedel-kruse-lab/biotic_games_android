<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CameraActivity">

    <RelativeLayout
        android:id="@+id/menuOptionLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/menuLayout">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rules"
                android:typeface="monospace"
                android:id="@+id/instructButton"
                android:clickable="true"
                android:onClick="onInstructionsPressed" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Biotics"
                android:typeface="monospace"
                android:id="@+id/infoButton"
                android:clickable="true"
                android:onClick="infoButtonPressed" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Start!"
                android:textStyle="bold"
                android:typeface="monospace"
                android:id="@+id/newGame"
                android:clickable="true"
                android:onClick="onNewGamePressed"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Problems?"
                android:id="@+id/troubleShootButton"
                android:clickable="true"
                android:onClick="troubleShootButtonPressed" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Credits"
                android:typeface="monospace"
                android:id="@+id/creditButton"
                android:clickable="true"
                android:onClick="creditsButtonPressed" />

            </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Throw Ball"
                android:textSize="25dp"
                android:typeface="monospace"
                android:id="@+id/passButton"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:onClick="passButtonPressed" />

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Pickup Ball\n(-1 point)"
                android:textSize="25dp"
                android:typeface="monospace"
                android:id="@+id/pickupButton"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:onClick="pickupButtonPressed" />

        </LinearLayout>
    </RelativeLayout>

    <edu.stanford.riedel_kruse.bioticgames.CameraView
        android:id="@+id/camera_view"
        android:layout_width="400dp"
        android:layout_height="fill_parent"
        android:layout_below="@id/menuOptionLayout"
        opencv:show_fps="true"
        opencv:camera_id="any"/>

    <RelativeLayout
        android:id="@+id/zoomView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/menuOptionLayout"
        android:layout_toRightOf="@id/camera_view"
        android:layout_alignParentEnd="true">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scoreBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/camera_view"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/zoomView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Countdown: 0"
            android:textSize="20sp"
            android:typeface="monospace"
            android:id="@+id/countDown"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0  "
            android:typeface="monospace"
            android:textColor="#FF4444"
            android:textSize="40sp"
            android:id="@+id/rPoints"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn: Blue"
            android:textSize="20sp"
            android:typeface="monospace"
            android:id="@+id/playerTurn"
            android:layout_above="@+id/countDown"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  0"
            android:textSize="40sp"
            android:textColor="#33B5E5"
            android:typeface="monospace"
            android:id="@+id/bPoints"
            android:editable="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>
